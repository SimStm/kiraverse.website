{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@kira/components/*": [
        "src/components/*"
      ],
      "@kira/pages/*": [
        "src/pages/*"
      ],
      "@kira/helpers/*": [
        "src/helpers/*"
      ],
      "@kira/constants/*": [
        "src/constants/*"
      ],
      "@kira/assets/*": [
        "src/assets/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/**/@types",
      "*.d.ts"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts*",
    "*.ts*",
    "**/**.ts*"
  ]
}
